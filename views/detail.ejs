<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Kontak</h2>
      <% if (!contact) { %>
        <div class="alert alert-danger fw-bold" role="alert">
          Data Kontak tidak ada<br />
          <a href="/contact" class="alert-link fw-normal">Kembali ke halaman sebelumnya</a>
        </div>
        <% } else{%>
          <div class="card" style="width: 18rem">
            <div class="card-body">
              <h5 class="card-title">
                <%= contact.nama %>
                  <% if (contact.panggilan) { %>
                    <p class="card-text">
                      (<%= contact.panggilan %>)
                    </p>
                    <% } %>
              </h5>
              <h6 class="card-subtitle mb-2 text-body-secondary">
                <%= contact.nohp %>
              </h6>
              <p class="card-text">
                <%= contact.email %>
              </p>
              <p class="card-text">
                <%= contact.perusahaan %>
              </p>
              <p class="card-text">
                <%= contact.jabatan %>
              </p>
              <p class="card-text">
                <%= contact.grup %>
              </p>
              <a href="/contact/edit/<%= contact.nama %>" class="btn btn-info badge">ubah</a>
              <!-- <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger badge"
                onclick="return confirm('Anda yakin ingin menghapus kontak?');">hapus</a> -->
              <form action="/contact?_method=DELETE" method="POST" class="d-inline">
                <input type="hidden" name="nama" value="<%= contact.nama %>" />
                <button type="submit" class="btn btn-danger badge"
                  onclick="return confirm('yakin ingin menghapus kontak?')">hapus</button>
              </form>
              <a href=" /contact/" class="card-link d-block mt-3">&laquo; Kembali ke Daftar Kontak</a>
            </div>
          </div>
          <% } %>
    </div>
  </div>
</div>